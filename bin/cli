#!/usr/bin/env node

var program = require('commander'),
    updateCLI = require('./baleina.js'),
    libInfo = require('../package');

program
    .version(libInfo.version)

program
    .command('create')
    .description('create a project')
    .action(function(options) {
        updateCLI.create(options)
    });

program
    .command('update')
    .description('update the project')
    .action(function(options) {
        updateCLI.update(options)
    });

program
    .command('controller')
    .option('-n, --name', 'controller name')
    .option('-p, --path', 'controller path')
    .description('create controller')
    .action(function(name,xpath) {
        updateCLI.createController(name,xpath)
    });

program
    .command('view')
    .option('-n, --name', 'view name')
    .option('-p, --path', 'view path')
    .description('create view')
    .action(function(name,xpath) {
        updateCLI.createView(name,xpath)
    });

program
    .command('automodel')
    .description('create model config')
    .action(function(options) {
        updateCLI.createAutoModel()
    });

program.parse(process.argv); // 这行必须是结尾