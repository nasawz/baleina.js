<% var mname = modelConfig.name.replace(/-/g, '') %>




func_upyunFile = loadService('upyunFile');

module.exports =
  '/:eventId':
    get:->
      (req, res, next)->
        res.locals.level1 = 'upyunfile'
        res.locals.level2 = 'upyunfile_create'
        id = req.query.id
        if id and id isnt ''
          func_upyunFile.getUpyunFileById id, (err,data)->
            res.render('manage/upyunfile/create',{data:data})
        else
          res.render('manage/upyunfile/create',{data:{}})
    post:->
      (req, res, next)->
        obj = {}
        obj = req.body
        obj.eventId = req.params.eventId
        if obj.id
          func_upyunFile.updateUpyunFile obj, (err, data)->
            if err
              return res.json(code:500,msg:err,alert:'操作失败',content:'')
            return res.json(code:200,msg:'',alert:'操作成功',content:data)
        else
          func_upyunFile.createUpyunFile obj, (err, data)->
            if err
              return res.json(code:500,msg:err,alert:'操作失败',content:'')
            return res.json(code:200,msg:'',alert:'操作成功',content:data)